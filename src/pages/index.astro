---
import Layout from '../layouts/Layout.astro';
import Search from '../components/Search.astro';
---

<Layout title="TeGo-AI 文档中心">
  <div class="home-gradient-wrapper">
  <!-- 文档中心英雄区域 -->
  <div class="home-hero-section">
    <div class="home-hero-content">
      <h1 class="home-hero-title">欢迎​参阅 TeGo-AI ​帮助</h1>
      <p class="home-hero-description">
        了解产品功能，寻找问题答案。
      </p>
      
      <!-- 搜索组件 -->
      <Search />
      

    </div>
  </div>

  <!-- 快捷入口导航网格 -->
  <div class="home-resources-section">
    <h2 class="home-resources-title">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="title-icon">
        <path d="M3 3v18h18"></path>
        <path d="M9 9l9 9"></path>
        <path d="M18 9V3H9v6"></path>
      </svg>
      快捷入口
    </h2>
    <div class="home-resources-divider"></div>
    
    <!-- 6个菜单入口 -->
    <div class="home-main-features">
      <a href="./product-intro" class="home-feature-card primary">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
            <path d="M2 17l10 5 10-5"></path>
            <path d="M2 12l10 5 10-5"></path>
          </svg>
        </div>
        <div class="feature-content">
          <h3>产品介绍</h3>
          <p>了解 TeGo-AI 的核心功能和技术优势</p>
        </div>
        <div class="feature-arrow">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
      </a>

      <a href="./getting-started" class="home-feature-card primary">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
          </svg>
        </div>
        <div class="feature-content">
          <h3>快速开始</h3>
          <p>快速上手 TeGo-AI 智能体管理平台</p>
        </div>
        <div class="feature-arrow">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
      </a>
    </div>

    <div class="home-secondary-features">
      <a href="./poc-manual" class="home-resource-card compact">
        <div class="home-resource-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
            <line x1="19" y1="16" x2="5" y2="16"></line>
            <line x1="20" y1="6" x2="9" y2="6"></line>
          </svg>
        </div>
        <div class="home-resource-content">
          <h3>POC体验手册</h3>
          <p>快速体验产品功能的完整指南</p>
        </div>
      </a>

      <a href="./architecture" class="home-resource-card compact">
        <div class="home-resource-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M9 12l2 2 4-4"></path>
            <path d="M21 12c-1 0-2-1-2-2s1-2 2-2 2 1 2 2-1 2-2 2z"></path>
            <path d="M3 12c1 0 2-1 2-2s-1-2-2-2-2 1-2 2 1 2 2 2z"></path>
          </svg>
        </div>
        <div class="home-resource-content">
          <h3>技术架构</h3>
          <p>了解技术架构和系统设计</p>
        </div>
      </a>

      <a href="./operations" class="home-resource-card compact">
        <div class="home-resource-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
            <path d="M2 17l10 5 10-5"></path>
            <path d="M2 12l10 5 10-5"></path>
            <path d="M6.5 8a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
            <path d="M6.5 8a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z"/>
          </svg>
        </div>
        <div class="home-resource-content">
          <h3>运维部署</h3>
          <p>系统运维和部署指南</p>
        </div>
      </a>

      <a href="./faq" class="home-resource-card compact">
        <div class="home-resource-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
            <line x1="12" y1="17" x2="12.01" y2="17"></line>
          </svg>
        </div>
        <div class="home-resource-content">
          <h3>常见问题</h3>
          <p>查找常见问题的解决方案</p>
        </div>
      </a>
    </div>
  </div>
  </div>
</Layout>

