---
// 文档阅读器组件
// 用于展示Markdown文档内容

interface Props {
  doc: {
    title: string;
    description: string;
    content: string;
    category: string;
    tags: string[];
    author: string;
    publishedAt?: Date;
    lastModified?: Date;
    readingTime: number;
    wordCount: number;
  };
  toc?: Array<{ level: number; title: string; id: string }>;
}

const { doc, toc } = Astro.props;

// 生成目录锚点
function generateAnchor(text: string): string {
  return text.toLowerCase().replace(/[^a-z0-9]+/g, '-');
}
---

<div class="doc-reader">
  <!-- 文档头部 -->
  <header class="doc-header">
    <div class="doc-meta">
      <span class="doc-category">{doc.category}</span>
      <span class="doc-reading-time">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12,6 12,12 16,14"></polyline>
        </svg>
        {doc.readingTime} 分钟阅读
      </span>
      <span class="doc-word-count">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14,2 14,8 20,8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10,9 9,9 8,9"></polyline>
        </svg>
        {doc.wordCount} 字
      </span>
    </div>
    
    <h1 class="doc-title">{doc.title}</h1>
    <p class="doc-description">{doc.description}</p>
    
    <div class="doc-author">
      <span class="doc-author-label">作者：</span>
      <span class="doc-author-name">{doc.author}</span>
      {doc.publishedAt && (
        <>
          <span class="doc-date-separator">·</span>
          <span class="doc-date">
            发布于 {new Date(doc.publishedAt).toLocaleDateString('zh-CN')}
          </span>
        </>
      )}
      {doc.lastModified && doc.lastModified !== doc.publishedAt && (
        <>
          <span class="doc-date-separator">·</span>
          <span class="doc-date">
            更新于 {new Date(doc.lastModified).toLocaleDateString('zh-CN')}
          </span>
        </>
      )}
    </div>
    
    {doc.tags.length > 0 && (
      <div class="doc-tags">
        {doc.tags.map(tag => (
          <span class="doc-tag">{tag}</span>
        ))}
      </div>
    )}
  </header>
  
  <!-- 文档内容 -->
  <div class="doc-content">
    <div class="doc-content-main">
      <!-- 这里将渲染Markdown内容 -->
      <div class="markdown-content" set:html={doc.content}></div>
    </div>
    
    <!-- 侧边栏目录 -->
    {toc && toc.length > 0 && (
      <aside class="doc-toc">
        <div class="toc-header">
          <h3 class="toc-title">目录</h3>
        </div>
        <nav class="toc-nav">
          <ul class="toc-list">
            {toc.map(item => (
              <li class={`toc-item toc-level-${item.level}`}>
                <a href={`#${item.id}`} class="toc-link">
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </aside>
    )}
  </div>
</div>

<style>
  .doc-reader {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .doc-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.1);
  }
  
  .doc-meta {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  
  .doc-category {
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    color: white;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .doc-reading-time,
  .doc-word-count {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.9rem;
  }
  
  .doc-title {
    font-size: 3rem;
    font-weight: 800;
    color: #1e293b;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }
  
  .doc-description {
    font-size: 1.25rem;
    color: #475569;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .doc-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }
  
  .doc-author-label {
    color: #64748b;
    font-size: 0.9rem;
  }
  
  .doc-author-name {
    color: #3b82f6;
    font-weight: 600;
  }
  
  .doc-date-separator {
    color: #cbd5e1;
  }
  
  .doc-date {
    color: #64748b;
    font-size: 0.9rem;
  }
  
  .doc-tags {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
  
  .doc-tag {
    padding: 0.5rem 1rem;
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .doc-content {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 4rem;
    align-items: start;
  }
  
  .doc-content-main {
    min-width: 0;
  }
  
  .markdown-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #1e293b;
  }
  
  .markdown-content h1,
  .markdown-content h2,
  .markdown-content h3,
  .markdown-content h4,
  .markdown-content h5,
  .markdown-content h6 {
    margin: 2rem 0 1rem 0;
    font-weight: 700;
    line-height: 1.3;
  }
  
  .markdown-content h1 { font-size: 2rem; }
  .markdown-content h2 { font-size: 1.75rem; }
  .markdown-content h3 { font-size: 1.5rem; }
  .markdown-content h4 { font-size: 1.25rem; }
  .markdown-content h5 { font-size: 1.1rem; }
  .markdown-content h6 { font-size: 1rem; }
  
  .markdown-content p {
    margin: 1rem 0;
  }
  
  .markdown-content ul,
  .markdown-content ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }
  
  .markdown-content li {
    margin: 0.5rem 0;
  }
  
  .markdown-content blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid #3b82f6;
    background: rgba(59, 130, 246, 0.05);
    border-radius: 0 8px 8px 0;
  }
  
  .markdown-content code {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }
  
  .markdown-content pre {
    background: #1e293b;
    color: #e2e8f0;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .markdown-content pre code {
    background: none;
    color: inherit;
    padding: 0;
  }
  
  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  
  .markdown-content th,
  .markdown-content td {
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    text-align: left;
  }
  
  .markdown-content th {
    background: #f8fafc;
    font-weight: 600;
  }
  
  .doc-toc {
    position: sticky;
    top: 2rem;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
  }
  
  .toc-header {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.1);
  }
  
  .toc-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0;
  }
  
  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .toc-item {
    margin: 0.5rem 0;
  }
  
  .toc-link {
    display: block;
    color: #64748b;
    text-decoration: none;
    padding: 0.5rem 0;
    border-radius: 6px;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }
  
  .toc-link:hover {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.05);
  }
  
  .toc-level-1 { padding-left: 0; }
  .toc-level-2 { padding-left: 1rem; }
  .toc-level-3 { padding-left: 2rem; }
  .toc-level-4 { padding-left: 3rem; }
  .toc-level-5 { padding-left: 4rem; }
  .toc-level-6 { padding-left: 5rem; }
  
  @media screen and (max-width: 1024px) {
    .doc-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .doc-toc {
      position: static;
      max-height: none;
    }
  }
  
  @media screen and (max-width: 768px) {
    .doc-reader {
      padding: 1rem;
    }
    
    .doc-title {
      font-size: 2rem;
    }
    
    .doc-meta {
      flex-direction: column;
      gap: 1rem;
    }
    
    .doc-author {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
