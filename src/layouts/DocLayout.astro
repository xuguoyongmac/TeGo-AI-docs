---
import Layout from './Layout.astro';
import Sidebar from '../components/Sidebar.astro';

export interface Props {
  title: string;
  description?: string;
  sidebarTitle: string;
  sidebarItems: Array<{
    href: string;
    text: string;
  }>;
  breadcrumbs: Array<{
    href?: string;
    text: string;
  }>;
}

const { title, description, sidebarTitle, sidebarItems, breadcrumbs } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="page-container">
    <Sidebar title={sidebarTitle} items={sidebarItems} />
    
    <main class="main-content">
      <div class="content-wrapper">
        <nav class="breadcrumb">
          {breadcrumbs.map((crumb, index) => (
            <>
              {crumb.href ? (
                <a href={crumb.href}>{crumb.text}</a>
              ) : (
                <span>{crumb.text}</span>
              )}
              {index < breadcrumbs.length - 1 && ' > '}
            </>
          ))}
        </nav>

        <article class="markdown-content">
          <slot />
        </article>

        <div class="navigation-links">
          <slot name="navigation" />
        </div>
      </div>
    </main>
  </div>
</Layout>

  <style>
    @import '../styles/global.css';

    /* 标题样式 - 添加显眼效果 */
    :global(.markdown-content h1) {
      padding-left: 0;
      border-left: none;
      text-align: center;
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--primary-color);
      background: linear-gradient(135deg, #1e40af 0%, #3b82f6 50%, #8b5cf6 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 2rem;
    }

    :global(.markdown-content h2) {
      padding-left: 0;
      border-left: none;
      color: var(--primary-color);
      font-weight: 700;
      font-size: 1.8rem;
      margin: 2.5rem 0 1rem 0;
      padding-top: 1rem;
    }

    :global(.markdown-content h3) {
      padding-left: 0.8rem;
      border-left: none;
      color: var(--primary-color);
      font-weight: 700;
      font-size: 1.3rem;
      margin: 1.5rem 0 0.75rem 0;
      position: relative;
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(139, 92, 246, 0.08) 70%, rgba(139, 92, 246, 0.02) 90%, rgba(139, 92, 246, 0) 100%);
      padding: 0.3rem 1rem;
      border-radius: 8px 0 0 8px;
      display: block;
      margin-left: 2rem;
      margin-right: 0;
    }

    :global(.markdown-content h4) {
      padding-left: 0;
      border-left: none;
      color: var(--text-primary);
      font-weight: 600;
      font-size: 1.2rem;
      margin: 1.5rem 0 0.8rem 0;
    }



  :global(.markdown-content blockquote strong) {
    color: var(--primary-color);
    font-weight: 700;
    font-style: normal;
    padding: 0.3rem 0.8rem;
    display: inline-block;
    margin-bottom: 0.5rem;
    position: relative;
  }

  /* 功能概述前面的竖线 */
  :global(.markdown-content blockquote strong:contains("功能概述")) {
    padding-left: 1.2rem;
  }

  :global(.markdown-content blockquote strong:contains("功能概述")::before) {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 1.2em;
    background: linear-gradient(180deg, #3b82f6 0%, #8b5cf6 100%);
    border-radius: 2px;
  }

      :global(.markdown-content blockquote p) {
      margin: 0;
      color: var(--text-secondary);
      font-size: 1.05rem;
      padding-left: 0;
      text-indent: 2em;
    }

      /* 引用块容器样式 */
    :global(.markdown-content blockquote) {
      position: relative;
      margin: 1rem 0;
      margin-left: 2rem;
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.12) 0%, rgba(139, 92, 246, 0.08) 100%);
      border-radius: 5px 5px 5px 5px;
      border: 1px solid rgba(59, 130, 246, 0.2);
      box-shadow: 0 2px 8px rgba(59, 130, 246, 0.1);
      overflow: hidden;
    }

    /* 引用标签样式 */
    :global(.markdown-content blockquote::before) {
      content: attr(data-label, "引用");
      position: absolute;
      left: -1px;
      top: -1px;
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.9) 0%, rgba(139, 92, 246, 0.8) 100%);
      color: white;
      padding: 0.15rem 2.7rem 0.15rem 2.7rem;
      font-size: 0.7rem;
      font-weight: 600;
      font-style: normal;
      line-height: 1;
      z-index: 1;
      border-radius: 5px 0 8px 0;
      box-shadow: 0 1px 3px rgba(59, 130, 246, 0.2);
      text-align: center;
      border: 1px solid rgba(59, 130, 246, 0.3);
    }

    /* 引用内容 */
    :global(.markdown-content blockquote p) {
      margin: 0;
      padding: 2rem 1rem 1rem 1rem;
      color: var(--text-secondary);
      font-size: 1.05rem;
      line-height: 1.7;
      font-style: italic;
      text-align: left;
    }

      /* 功能概述引用的特殊样式 */
    :global(.markdown-content blockquote:has(strong:contains("功能概述"))) {
      background: none;
      border: none;
      font-weight: 500;
      padding-left: 0.8rem;
    }

  :global(.markdown-content blockquote:has(strong:contains("功能概述")) strong) {
    background: linear-gradient(90deg, rgba(59, 130, 246, 0.2) 0%, rgba(139, 92, 246, 0.15) 100%);
    color: var(--primary-color);
    font-weight: 700;
  }

  /* 响应式设计 */
  @media screen and (max-width: 768px) {
    :global(.markdown-content blockquote) {
      padding: 1.5rem 1.5rem 1.5rem 1.3rem;
      margin: 1.5rem 0;
    }
  }

      /* 第一段描述特殊样式 - 专门针对第一段，不影响引用 */
      :global(.markdown-content h1 + p) {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(139, 92, 246, 0.04) 100%);
        border: 1px solid rgba(59, 130, 246, 0.12);
        border-radius: 12px;
        padding: 1.05rem 1.4rem !important;
        margin: 0 !important;
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--text-primary);
        position: relative;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.08);
        text-align: left;
        display: block;
        width: 100%;
        box-sizing: border-box;
        text-indent: 2em;
      }

      /* 整体内容缩进样式 - 排除第一段描述 */
    :global(.markdown-content p:not(:first-of-type)) {
      padding-left: 4rem;
      margin: 1rem 0;
      line-height: 1.6;
      color: var(--text-secondary);
    }

    :global(.markdown-content ul, .markdown-content ol) {
      padding-left: 2rem;
      margin: 1rem 0;
    }

    :global(.markdown-content li) {
      margin: 0.5rem 0;
      line-height: 1.6;
      color: var(--text-secondary);
      padding-left: 5rem;
      position: relative;
    }

    /* 保持 Markdown 原有的列表缩进 */
    :global(.markdown-content ul) {
      list-style: none;
    }

    :global(.markdown-content ul li::before) {
      content: "•";
      color: var(--primary-color);
      font-weight: bold;
      position: absolute;
      left: 3.5rem;
      top: 0;
    }

    :global(.markdown-content ol) {
      list-style: none;
      counter-reset: list-counter;
    }

    :global(.markdown-content ol li) {
      counter-increment: list-counter;
      padding-left: 5rem;
    }

    :global(.markdown-content ol li::before) {
      content: counter(list-counter) ".";
      color: var(--primary-color);
      font-weight: bold;
      position: absolute;
      left: 3.5rem;
      top: 0;
    }

    /* 打印样式 */
    @media print {
      :global(.markdown-content blockquote) {
        background: white;
        border: 1px solid #ccc;
        box-shadow: none;
      }
    }
</style>
